                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="น้ำตกก้อหลวง"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/textviewkohluang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/light_pink"
                    android:text="@string/waterfall7"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/waterfall8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/waterfall7">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/mandaeng"
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:shapeAppearanceOverlay="@style/circular"
                android:layout_gravity="center"
                android:src="@drawable/mandaeng">
            </com.google.android.material.imageview.ShapeableImageView>

            <LinearLayout
                android:id="@+id/text8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/waterfall08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Man Daeng Waterfall"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="น้ำตกหมันแดง"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/textviewmandaeng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/light_pink"
                    android:text="@string/waterfall8"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/waterfall9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/waterfall8">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/tadton"
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:shapeAppearanceOverlay="@style/circular"
                android:layout_gravity="center"
                android:src="@drawable/tadton">
            </com.google.android.material.imageview.ShapeableImageView>

            <LinearLayout
                android:id="@+id/text9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
